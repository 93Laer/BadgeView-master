    </com.example.laitianbing.badgeview_master.BadgeView>


    <com.example.laitianbing.badgeview_master.BadgeView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingTop="4dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="30dp"
        app:badgeAnchorPosition="AnchorLeftTop"
        app:badgeBgColor="@android:color/holo_red_light"
        app:badgeBorderColor="@android:color/white"
        app:badgeBorderWidth="2dp"
        app:badgeMarginHorizon="4dp"
        app:badgePaddingHorizon="2dp"
        app:badgeText="hot"
        app:badgeTextColor="@android:color/white"
        app:badgeTextSize="10sp">

        <TextView
